#include <stdio.h>
#include <stdlib.h>

// ANSI escape codes for text colors
#define ANSI_COLOR_RESET   "\x1b[0m"

// Struct for color information
typedef struct {
    const char* code;
    const char* name;
} ColorInfo;

// Enum for text colors
typedef enum {
    RED, GREEN, YELLOW, BLUE, MAGENTA, CYAN, NUM_COLORS
} TextColor;

// Array of color information
const ColorInfo colorInfos[NUM_COLORS] = {
    { "\x1b[31m", "Red" },
    { "\x1b[32m", "Green" },
    { "\x1b[33m", "Yellow" },
    { "\x1b[34m", "Blue" },
    { "\x1b[35m", "Magenta" },
    { "\x1b[36m", "Cyan" }
};

// Function to print colored text with a message
void printColoredText(const char* color, const char* message) {
    printf("%s%s%s\n", color, message, ANSI_COLOR_RESET);
}

int main() {
    // Display colored text with messages using struct and array
    for (int color = RED; color < NUM_COLORS; color++) {
        const ColorInfo* currentColor = &colorInfos[color];
        printf("%sThis text is %s.%s\n", currentColor->code, currentColor->name, ANSI_COLOR_RESET);
    }

    return EXIT_SUCCESS;
}
